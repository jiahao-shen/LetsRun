<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_user_image"
        app:civ_border_color="@color/bootstrap_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.369"
        tools:ignore="VectorDrawableCompat" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/userNameText"
        app:layout_constraintLeft_toLeftOf="@+id/userImageView"
        app:layout_constraintRight_toRightOf="@+id/userImageView"
        app:layout_constraintTop_toBottomOf="@+id/userImageView"
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="用户名"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="20sp"
        android:gravity="center"
        app:met_primaryColor="@color/colorPrimary"
        />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/nextButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="下一步"
        app:bootstrapBrand="danger"
        app:bootstrapSize="xl"
        app:layout_constraintLeft_toLeftOf="@+id/userNameText"
        app:layout_constraintRight_toRightOf="@+id/userNameText"
        app:layout_constraintTop_toBottomOf="@+id/userNameText"
        app:roundedCorners="true" />

</android.support.constraint.ConstraintLayout>
