<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sam.letsrun.Custom.MyViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        android:layout_height="wrap_content"/>

    <devlight.io.library.ntb.NavigationTabBar
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        app:ntb_titled="true"
        app:ntb_badged="true"
        app:ntb_bg_color="#eeeeee"
        app:ntb_active_color="#0000CD"
        app:ntb_badge_bg_color="#DC143C"
        app:ntb_badge_title_color="#ffffff"
        app:ntb_animation_duration="0"
        app:ntb_inactive_color="#333333"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="70dp" />


</android.support.constraint.ConstraintLayout>
