<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/setPwdText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="设置密码"
        android:textSize="20sp"
        android:inputType="textPassword"
        app:met_autoValidate="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:met_floatingLabel="highlight"
        app:met_maxCharacters="15"
        app:met_minCharacters="6"
        app:met_clearButton="true"
        app:met_primaryColor="@color/colorPrimary" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/repeatPwdText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="确认密码"
        android:textSize="20sp"
        app:met_clearButton="true"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="@+id/setPwdText"
        app:layout_constraintRight_toRightOf="@+id/setPwdText"
        app:layout_constraintTop_toBottomOf="@+id/setPwdText"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="@color/colorPrimary" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/nextButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="下一步"
        app:bootstrapBrand="danger"
        app:bootstrapSize="xl"
        app:layout_constraintLeft_toLeftOf="@+id/repeatPwdText"
        app:layout_constraintRight_toRightOf="@+id/repeatPwdText"
        app:layout_constraintTop_toBottomOf="@+id/repeatPwdText"
        app:roundedCorners="true" />

</android.support.constraint.ConstraintLayout>
